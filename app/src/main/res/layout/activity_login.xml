<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/login_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <EditText
            android:layout_width="283.67dp"
            android:layout_height="28.33dp"
            android:hint="이메일"
            android:background="@drawable/box_text"/>
        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="283.67dp"
            android:layout_height="28.33dp"
            android:hint="비밀번호"
            android:background="@drawable/box_text"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="자동로그인"
                android:textColor="#000000"
                android:layout_gravity="right"
                android:gravity="center_vertical"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_check"/>
        </LinearLayout>



        </LinearLayout>

            <LinearLayout
                android:id="@+id/login_linear2"
                android:layout_below="@+id/login_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="139.67dp"
                    android:layout_height="38.33dp"
                    android:text="로그인"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:background="@drawable/btn_login"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="139.67dp"
                    android:layout_height="38.33dp"
                    android:text="비회원으로 접속"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:background="@drawable/btn_guest"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_below="@id/login_linear2"
                android:layout_width="283.67dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="37.33dp"
                        android:layout_height="37.33dp" 
                        android:background="@drawable/btn_find_id"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10.67dp"
                        android:text="아이디 찾기"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_width="37.33dp"
                        android:layout_height="37.33dp"
                        android:background="@drawable/btn_password"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10.67dp"
                        android:text="비밀번호 재발금"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:layout_width="37.33dp"
                        android:layout_height="37.33dp"
                        android:background="@drawable/btn_joinus"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10.67dp"
                        android:text="회원가입"/>
                </LinearLayout>
            </RelativeLayout>



</RelativeLayout>
