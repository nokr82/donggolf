<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InquireActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/finishLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="17dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_back" />
                </LinearLayout>

                <TextView
                    android:id="@id/hintTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="문의하기"
                    android:textSize="15dp"
                    android:textColor="#000000" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_0"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:text="답변받을 이메일"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/inquire_emailLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:text="kido92@naver.com"
                            android:id="@+id/ans_user_email"/>
                        <ImageView
                            android:id="@+id/goToEmailMod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/btn_change_name"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/modEmailLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <EditText
                            android:id="@+id/rsp_emailET"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:background="@null"
                            android:textSize="13dp"
                            android:hint="답변 받을 이메일"/>
                        <TextView
                            android:id="@+id/btn_okTV"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="#a7a7a7"
                            android:textColor="#ffffff"
                            android:textSize="13dp"
                            android:text="확인"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:text="휴대폰 번호"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:text="010-2534-5553"
                    android:id="@+id/mobNumTV"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="*휴대폰 번호가 변경된 경우 홈 > 내 메뉴 > 기타관리에서 변경할 수 있습니다."
                android:textSize="11dp"
                android:background="#f4f4f4"/>
            <EditText
                android:id="@+id/inquire_contET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="10"
                android:maxLength="1000"
                android:gravity="top"
                android:padding="13dp"
                android:background="@null"
                android:hint="문의 내용을 입력해주세요."/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/btn_inquire"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="19dp"
            android:textStyle="bold"
            android:text="문의하기"
            android:textColor="#ffffff"
            android:background="@drawable/btn_grey"/>
    </LinearLayout>

</LinearLayout>