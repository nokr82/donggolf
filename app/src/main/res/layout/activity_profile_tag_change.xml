<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ProfileTagChangeActivity">

    <!-- 맨 위 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/finishtagLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_back" />
            <TextView
                android:id="@+id/titleTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="나의 #"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/confirmRL"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="등록"
                android:gravity="center|right"
                android:textColor="#0ED92F"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@mipmap/line_0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#c9c9c9"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:text="태그"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/hashtagET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:background="@android:color/transparent"
                android:textSize="14dp"
                android:singleLine="true"
                android:maxLength="10"
                android:hint="나를 표현하는 단어나 문장을 넣어주세요"
                android:imeOptions="actionDone"/>
            <ImageView
                android:id="@+id/clearIV"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:src="@drawable/btn_del_text"/>
        </LinearLayout><!-- Edit Text and remove button -->
    </LinearLayout><!-- TextView & editText -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/line_text"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countTV"
            android:textSize="12dp"
            android:textColor="#0ED92F"
            android:textStyle="bold"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/10"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#c9c9c9"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="현재 #"
            android:textSize="13dp"
            android:textStyle="bold" />

        <GridView
            android:scrollbars="none"
            android:id="@+id/tagList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="40dp"
            android:gravity="left"
            android:numColumns="3"
            android:stretchMode="columnWidth"></GridView>
    </LinearLayout>


</LinearLayout>