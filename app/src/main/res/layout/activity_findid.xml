<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FindidActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/finishBT"
                android:layout_width="11dp"
                android:layout_height="17dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/hintTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="아이디 찾기"
            android:textSize="15dp"
            android:textColor="#000000" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
            android:background="@drawable/line_0" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입시에 기입한 휴대폰번호를 입력하세요"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_margin="15dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="28.33dp"
            android:layout_marginLeft="15dp">
            <ImageView
                android:layout_width="286dp"
                android:layout_height="31dp"
                android:background="@drawable/register"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/phoneET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="90dp"
                    android:hint="휴대폰 번호"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="14dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/findBT"
                android:layout_width="44dp"
                android:layout_height="31dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:text="확인"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/btn_guest_selector"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="45dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/idhintTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/useridTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#0EDA2F"/>

                <TextView
                    android:id="@+id/id_hint_endTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#000000"/>
            </LinearLayout>

    </RelativeLayout>

</LinearLayout>