<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FindidActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_finish"
            android:layout_width="8.33dp"
            android:layout_height="14.67dp"
            android:layout_margin="10dp"
            android:background="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="아이디 찾기"
            android:textColor="#000000" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
            android:background="@drawable/line_0" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입시에 기입한 휴대폰번호를 입력하세요"
            android:textSize="9.33dp"
            android:textColor="#000000"
            android:layout_margin="15dp"
            />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">
        <ImageView
            android:layout_width="283.67dp"
            android:layout_height="28.33dp"
            android:background="@drawable/register"
            android:layout_centerVertical="true"/>
        <EditText
            android:layout_width="272.33dp"
            android:layout_height="24.33dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:hint="휴대폰 번호"
            android:inputType="number"
            android:textSize="9.33dp" />
        <TextView
            android:layout_width="41.67dp"
            android:layout_height="28.33dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:text="확인"
            android:gravity="center"
            android:background="@drawable/btn_guest_selector"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="45dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디 힌트는 "
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="K*****@naver.com"
                    android:textColor="#0EDA2F"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입니다"
                    android:textColor="#000000"/>
            </LinearLayout>

    </RelativeLayout>

</LinearLayout>