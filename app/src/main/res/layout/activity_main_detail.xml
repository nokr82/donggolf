<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainDetailActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="264.33dp"
            android:layout_height="229dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="글 보관하기"
                    android:gravity="center"
                    android:background="@drawable/boarder_707070_background_ffffff"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="신고하기"
                    android:gravity="center"
                    android:background="@drawable/boarder_707070_background_ffffff"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="친구신청"
                    android:gravity="center"
                    android:background="@drawable/boarder_707070_background_ffffff"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="5"
                    android:text="수정"
                    android:gravity="center"
                    android:background="@drawable/boarder_707070_background_ffffff"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="글 보관하기"
                    android:gravity="center"
                    android:background="@drawable/boarder_707070_background_ffffff"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/btn_finish"
            android:layout_width="11.67dp"
            android:layout_height="11.67dp"
            android:background="@drawable/btn_close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영정도CC에서 오랜만의 즐라운딩"
                android:layout_margin="7dp"
                android:textColor="#000000"
                android:textSize="11.33dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxx년 xx월 xx일 오후 xx:xx"
                    android:layout_marginLeft="7dp"
                    android:textSize="7.33dp"
                    android:textColor="#CDCDCD"/>
                <ImageView
                    android:layout_width="10.67dp"
                    android:layout_height="7dp"
                    android:background="@drawable/icon_view"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9999"
                    android:textSize="7.33dp"
                    android:textColor="#CDCDCD"/>
                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="7dp"
                    android:background="@drawable/icon_comment"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9999"
                    android:textSize="7.33dp"
                    android:textColor="#CDCDCD"/>
                <ImageView
                    android:layout_width="8.33dp"
                    android:layout_height="7.67dp"
                    android:background="@drawable/icon_like"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9999"
                    android:textSize="7.33dp"
                    android:textColor="#CDCDCD"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/line_0" />
    


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="15.67dp"
            android:layout_height="15.67dp"
            android:background="@drawable/btn_menu"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp" 
                android:layout_margin="7dp"
                android:background="@drawable/icon_profile"/>
            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="닉네임일곱글자"
                        android:textColor="#EF5C34"
                        android:textSize="10.67dp"
                        android:maxLength="7"/>
                    <ImageView
                        android:layout_width="20.33dp"
                        android:layout_height="8.67dp"
                        android:background="@drawable/icon_first"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상태메시지 텍스트가 들어 갈 자리입니다."
                    android:textColor="#AFAFAF"
                    android:textSize="8.67dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동해물과 백두산이 마르고 닳도록 하느님이 보우하사 우리나라만세 무궁화 삼천리 화려강산 대한사람 ~~"
        android:layout_margin="7dp"

        android:textSize="10.67dp"
        android:textColor="#000000"/>
    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="191.33dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"/>
    
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="14dp"
            android:background="@drawable/btn_cancel_like"
            android:layout_marginLeft="9dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9999명이 좋아합니다."
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textSize="10dp"/>
        <ImageView
            android:layout_width="33.3dp"
            android:layout_height="33.3dp"
            android:background="@drawable/icon_profile"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:layout_width="33.3dp"
            android:layout_height="33.3dp"
            android:background="@drawable/icon_profile"
            android:layout_marginLeft="3dp"/>

        <ImageView
            android:layout_width="33.3dp"
            android:layout_height="33.3dp"
            android:background="@drawable/icon_profile"
            android:layout_marginLeft="3dp"/>

        <ImageView
            android:layout_width="33.3dp"
            android:layout_height="33.3dp"
            android:background="@drawable/icon_profile"
            android:layout_marginLeft="3dp"/>

        <ImageView
            android:layout_width="33.3dp"
            android:layout_height="33.3dp"
            android:background="@drawable/icon_profile"
            android:layout_marginLeft="3dp"/>

        <ImageView
            android:layout_width="33.3dp"
            android:layout_height="33.3dp"
            android:background="@drawable/icon_profile"
            android:layout_marginLeft="3dp"/>
        
        <ImageView
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:background="@drawable/btn_show_more"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/main_detail_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_0" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/main_detail_gofindpicture"
                    android:layout_width="23dp"
                    android:layout_height="20dp"
                    android:background="@drawable/btn_add_photo"
                    android:layout_margin="10dp"/>
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="댓글을 남겨주세요"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textSize="10.67dp"/>
                <TextView
                    android:id="@+id/detail_add_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="등록"
                    android:textColor="#0EDA2F"
                    android:textSize="10.67dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>






</LinearLayout>