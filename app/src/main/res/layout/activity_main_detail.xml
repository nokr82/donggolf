<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainDetailActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:id="@+id/goneRL"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <LinearLayout
                    android:id="@+id/finishLL"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_close" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titleTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:textColor="#000000"
                        android:textSize="14dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/dateTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="xxxx년 xx월 xx일 오후 xx:xx"
                            android:layout_marginLeft="7dp"
                            android:textSize="10dp"
                            android:textColor="#CDCDCD"/>
                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="10dp"
                            android:background="@drawable/icon_view"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"/>
                        <TextView
                            android:id="@+id/viewTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9999"
                            android:textSize="10dp"
                            android:textColor="#CDCDCD"/>
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="10dp"
                            android:background="@drawable/icon_comment"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9999"
                            android:textSize="10dp"
                            android:textColor="#CDCDCD"/>
                        <ImageView
                            android:layout_width="11dp"
                            android:layout_height="10dp"
                            android:background="@drawable/icon_like"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9999"
                            android:textSize="10dp"
                            android:textColor="#CDCDCD"/>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/line_0" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/plusBT"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_menu" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_margin="7dp"
                        android:background="@drawable/icon_profile"/>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/nickNameTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#EF5C34"
                                android:textSize="10.67dp"
                                android:maxLength="7"/>

                            <ImageView
                                android:layout_marginTop="1dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/icon_first" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#AFAFAF"
                            android:textSize="8.67dp"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>




            <TextView
                android:id="@+id/textTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:textSize="13dp"
                android:textColor="#000000"/>

            <donggolf.android.base.RationalRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                app:ratio="360:146">

                <ImageView
                    android:id="@+id/detailIV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <VideoView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>



            </donggolf.android.base.RationalRelativeLayout>

            </LinearLayout>
                <RelativeLayout
                    android:id="@+id/relativ_RL"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="30dp"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:background="@drawable/boarder_707070_background_ffffff"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="글 보관하기"
                            android:gravity="center"/>
                        <TextView
                            android:background="@drawable/boarder_707070_background_ffffff"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="신고하기"
                            android:gravity="center"/>
                        <TextView
                            android:background="@drawable/boarder_707070_background_ffffff"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="친구신청"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/modifyTV"
                            android:background="@drawable/boarder_707070_background_ffffff"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="수정"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/deleteTV"
                            android:background="@drawable/boarder_707070_background_ffffff"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="삭제"
                            android:gravity="center"/>
                    </LinearLayout>


                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="17dp"
                    android:background="@drawable/btn_cancel_like"
                    android:layout_marginLeft="9dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="9999명이 좋아합니다."
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textSize="13dp"/>
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/icon_profile"
                    android:layout_marginLeft="5dp"/>

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/icon_profile"
                    android:layout_marginLeft="3dp"/>

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/icon_profile"
                    android:layout_marginLeft="3dp"/>

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/icon_profile"
                    android:layout_marginLeft="3dp"/>

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/icon_profile"
                    android:layout_marginLeft="3dp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/btn_show_more" />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ListView
                    android:id="@+id/main_detail_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></ListView>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/line_0" />

                    <RelativeLayout
                        android:background="#ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/main_detail_gofindpicture"
                                android:layout_width="26dp"
                                android:layout_height="23dp"
                                android:background="@drawable/btn_add_photo"
                                android:layout_margin="10dp"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:hint="댓글을 남겨주세요"
                                android:gravity="center"
                                android:singleLine="true"
                                android:layout_marginRight="30dp"
                                android:layout_gravity="center_vertical"
                                android:textSize="13dp"/>

                        </LinearLayout>
                        <TextView
                            android:id="@+id/detail_add_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="10dp"
                            android:layout_alignParentRight="true"
                            android:text="등록"
                            android:textColor="#0EDA2F"
                            android:textSize="13dp" />
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</LinearLayout>