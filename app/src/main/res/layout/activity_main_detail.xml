<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainDetailActivity">


    <RelativeLayout
        android:id="@+id/goneRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:id="@+id/finishLL"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_close" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:textColor="#000000"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/dateTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:text="xxxx년 xx월 xx일 오후 xx:xx"
                                android:textColor="#CDCDCD"
                                android:textSize="10dp" />

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:background="@drawable/icon_view" />

                            <TextView
                                android:id="@+id/viewTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9999"
                                android:textColor="#CDCDCD"
                                android:textSize="10dp" />

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:background="@drawable/icon_comment" />

                            <TextView
                                android:id="@+id/cmtcountTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9999"
                                android:textColor="#CDCDCD"
                                android:textSize="10dp" />

                            <ImageView
                                android:layout_width="11dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:background="@drawable/icon_like" />

                            <TextView
                                android:id="@+id/heartcountTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9999"
                                android:textColor="#CDCDCD"
                                android:textSize="10dp" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/line_0" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/plusBT"
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="12dp">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/btn_menu" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profileIV"
                                    android:layout_width="33dp"
                                    android:layout_height="33dp"
                                    android:layout_margin="7dp"
                                    android:background="@drawable/icon_profile" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical">

                                        <TextView
                                            android:id="@+id/nickNameTV"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:maxLength="7"
                                            android:textColor="#EF5C34"
                                            android:textSize="10.67dp" />

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="1dp"
                                            android:background="@drawable/icon_first" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/statusmsgTV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#AFAFAF"
                                        android:textSize="8.67dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>


                        <TextView
                            android:id="@+id/textTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:textColor="#000000"
                            android:textSize="13dp" />

                        <donggolf.android.base.RationalRelativeLayout
                            android:id="@+id/imageRL"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            app:ratio="1020:574">

                            <android.support.v4.view.ViewPager
                                android:id="@+id/pagerVP"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <VideoView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/circleLL"
                                android:layout_width="match_parent"
                                android:layout_height="7.35dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="7dp"
                                android:gravity="center"
                                android:orientation="horizontal" />


                        </donggolf.android.base.RationalRelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/relativ_RL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/addfavoriteTV"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/boarder_707070_background_ffffff"
                                android:gravity="center"
                                android:text="글 보관하기" />

                            <TextView
                                android:id="@+id/reportTV"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/boarder_707070_background_ffffff"
                                android:gravity="center"
                                android:text="신고하기" />

                            <TextView
                                android:id="@+id/addFriendTV"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/boarder_707070_background_ffffff"
                                android:gravity="center"
                                android:text="친구신청" />

                            <TextView
                                android:id="@+id/modifyTV"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/boarder_707070_background_ffffff"
                                android:gravity="center"
                                android:text="수정" />

                            <TextView
                                android:id="@+id/deleteTV"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/boarder_707070_background_ffffff"
                                android:gravity="center"
                                android:text="삭제" />
                        </LinearLayout>


                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/hashtagTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="13dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34.5dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/likeLL"
                        android:layout_width="34.5dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/likeIV"
                            android:layout_width="18dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/icon_like" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/likecountTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="9999명이 좋아합니다."
                        android:textSize="13dp" />

                    <LinearLayout
                        android:id="@+id/likeMembersLL"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/likesMoreLL"
                        android:layout_width="50dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/btn_show_more" />

                    </LinearLayout>

                </LinearLayout>

                <!--<ListView
                    android:id="@+id/commentListLV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"/>-->
                <donggolf.android.base.ExpandableHeightListView
                    android:id="@+id/commentListLV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_detail_gofindpicture"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:layout_weight="3.2"
                    android:background="@drawable/btn_add_photo" />

                <EditText
                    android:id="@+id/cmtET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="댓글을 남겨주세요"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/cmtTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="댓글이 차단된 상태입니다"
                    android:textSize="13dp"
                    android:visibility="gone" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#cdcdcd" />

                <TextView
                    android:id="@+id/detail_add_commentTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="등록"
                    android:textColor="#0EDA2F"
                    android:textSize="13dp" />
            </LinearLayout>

            <!--댓글입력란 끝-->

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>