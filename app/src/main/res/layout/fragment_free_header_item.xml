<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/areaLL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="19dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_area"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/areaTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="경기 / 인천"
                android:textSize="13dp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/friendsLL">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="19dp"
                android:background="@drawable/icon_golfer"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/areaCntTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="9999명"
                android:textSize="13dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <ImageView
                android:id="@+id/marketIV"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_market" />
        </RelativeLayout>

    </LinearLayout>
    <!-- 탭 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/homeRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4">
                    <ImageView
                        android:id="@+id/homeBT"
                        android:layout_centerInParent="true"
                        android:layout_width="33dp"
                        android:layout_height="32dp"
                        android:background="@drawable/btn_main_on" />
                    <ImageView
                        android:id="@+id/homeIV"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/btn_withdrawal"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/chatRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4">
                    <ImageView
                        android:id="@+id/chatBT"
                        android:layout_width="21dp"
                        android:layout_height="32dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_chatting_off"/>
                    <ImageView
                        android:id="@+id/chatIV"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/img_line_1"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/noticeRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/noticeBT"
                        android:layout_width="19dp"
                        android:layout_height="32dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_notice_off"/>
                    <ImageView
                        android:id="@+id/noticeIV"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/img_line_1"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/infoRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4">
                    <ImageView
                        android:id="@+id/infoBT"
                        android:layout_width="27dp"
                        android:layout_height="32dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_mypage_off"/>
                    <ImageView
                        android:id="@+id/infoIV"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/img_line_1"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>




</LinearLayout>