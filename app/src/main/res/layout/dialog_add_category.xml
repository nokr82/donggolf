<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="280dp"
    android:layout_height="130dp" android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dlgTitle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="카테고리 추가"/>
    <ImageView

        android:id="@+id/btn_title_clear"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/btn_del_category_name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <EditText
            android:singleLine="true"
            android:id="@+id/categoryTitleET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:maxLength="10"
            android:hint="카테고리명을 입력해 주세요."
            android:textSize="13dp"
            android:background="@null"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#c4c4c4"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">
        <TextView
            android:id="@+id/leftWords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="#0ED92F"
            android:textStyle="bold"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="#CDCDCD"
            android:text="/10"/>


    </LinearLayout>

    <TextView
        android:layout_gravity="right"
        android:id="@+id/dlg_addchattingTV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="등록"
        android:textColor="#0ED92F"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"/>
</LinearLayout>