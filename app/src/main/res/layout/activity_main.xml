<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:orientation="vertical">
    
    <LinearLayout
        android:id="@+id/maintitleLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/areaLL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="19dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_area"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/areaTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="13dp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/friendsLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="19dp"
                android:background="@drawable/icon_golfer"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/areaCntTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="명"
                android:textSize="13dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/eventLL">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:text="☆이벤트"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="5dp"
                android:id="@+id/addpostLL"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_write" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
<!-- 탭 -->
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/homeRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4">
                        <ImageView
                            android:id="@+id/homeBT"
                            android:layout_centerInParent="true"
                            android:layout_width="33dp"
                            android:layout_height="32dp"
                            android:background="@drawable/btn_main_on" />
                        <ImageView
                            android:id="@+id/homeIV"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/btn_withdrawal"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </LinearLayout>
            <LinearLayout
                android:id="@+id/chatRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4">
                    <ImageView
                        android:id="@+id/chatBT"
                        android:layout_width="21dp"
                        android:layout_height="32dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_chatting_off"/>
                    <ImageView
                        android:id="@+id/chatIV"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/img_line_1"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/noticeRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/noticeBT"
                        android:layout_width="19dp"
                        android:layout_height="32dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_notice_off"/>
                    <ImageView
                        android:id="@+id/noticeIV"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/img_line_1"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
            android:id="@+id/infoRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <ImageView
                    android:id="@+id/infoBT"
                    android:layout_width="27dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_mypage_off"/>
                <ImageView
                    android:id="@+id/infoIV"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/img_line_1"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:id="@+id/marketIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:text="골프창고"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/btn_market" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/img_line_1"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frags"/>
    </LinearLayout>

