<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/main_detail_listitem_comment"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_comment"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="53dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/isOnlineIV"
                    android:layout_width="15dp"
                    android:layout_height="13dp"
                    android:background="@drawable/icon_user_online"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"/>
                <ImageView
                    android:id="@+id/main_detail_listitem_profileimage"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/icon_profiles"/>
                </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/main_detail_listitem_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임일곱글자"
                    android:textColor="#EF5C34"
                    android:textSize="15dp"
                    android:maxLength="7"/>
                <ImageView
                    android:id="@+id/main_detail_listitem_firstimage"
                    android:layout_width="23dp"
                    android:layout_height="11dp"
                    android:background="@drawable/icon_first"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/main_detail_listitem_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상태메시지 텍스트가 들어 갈 자리입니다."
                android:textColor="#AFAFAF"
                android:textSize="13dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>