<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="280dp"
    android:layout_height="150dp" android:padding="15dp">

    <TextView
        android:id="@+id/dlgTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="비공개 코드 입력"/>
    <TextView
        android:id="@+id/dlgtextTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비공개 코드 입력이 필요한 채팅방입니다."
        android:textSize="10dp"
        android:textColor="#cccccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <EditText
            android:id="@+id/categoryTitleET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:maxLength="10"
            android:hint="변경할 코드를 입력해 주세요."
            android:textSize="13dp"
            android:background="@null"/>
        <LinearLayout
            android:id="@+id/btn_title_clear"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/btn_del_category_name"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#c4c4c4"/>

    <LinearLayout
        android:id="@+id/codevisibleLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left">
        <TextView
            android:id="@+id/settitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textStyle="bold"
            android:text="현재 비공개 코드는 "/>
        <TextView
            android:id="@+id/blockcodeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#0ED92F"
            android:textSize="10dp"
            android:text="XTC666"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textStyle="bold"
            android:text=" 입니다."/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:layout_alignParentRight="true">
           <TextView
               android:id="@+id/cancleTV"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="취소"/>
           <TextView
               android:id="@+id/okTV"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="확인"/>
       </LinearLayout>

    </RelativeLayout>
</LinearLayout>