<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddPostActivity"
    android:orientation="vertical"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_finish"
                android:layout_width="8.33dp"
                android:layout_height="14.67dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="글쓰기"
                android:textColor="#000000" />
        </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/line_0" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="제목"
                android:layout_margin="10dp"
                android:textSize="12.73dp"
                android:background="@null"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/img_line_1"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:hint="내용을 입력해주세요"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="11.33dp"
                android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="게시판 옵션"
            android:textColor="#CDCDCD"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="댓글허용"
                android:textColor="#CDCDCD"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:buttonTint="#0EDA2F"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="채팅방허용"
                android:textColor="#CDCDCD"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#0EDA2F"/>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btn_go_findpictureactivity"
                android:layout_width="23dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_add_photo"
                android:layout_margin="10dp"/>
            <ImageView
                android:layout_width="22.67dp"
                android:layout_height="17.67dp"
                android:background="@drawable/btn_add_video"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/btn_tag"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="15.67dp"
                    android:background="@drawable/btn_keyboard"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>